{
  "expo": {
    "name": "BestDeal",
    "slug": "bestdeal",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "scheme": "bestdeal",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0A0F"
    },
    "ios": {
      "bundleIdentifier": "com.bestdeal.app",
      "infoPlist": {
        "NSCameraUsageDescription": "BestDeal needs camera access to search products by image",
        "NSPhotoLibraryUsageDescription": "BestDeal needs photo library access to search products by image"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0A0A0F"
      },
      "package": "com.bestdeal.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "BestDeal needs access to your photos to search products by image",
          "cameraPermission": "BestDeal needs camera access to search products by image"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "152c1c29-ec3d-47dd-b6e3-affafbd55f16"
      }
    },
    "owner": "sadique362"
  }
}
