{
  "version": 2,
  "buildCommand": "cd backend && npm install && npm run build",
  "installCommand": "npm install --prefix backend",
  "builds": [
    {
      "src": "backend/dist/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/dist/server.js"
    },
    {
      "src": "/health",
      "dest": "backend/dist/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
